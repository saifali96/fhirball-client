{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "lib": ["es6", "dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      // Add an alias for the src directory: `import ... from ~/graphql`
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*.tsx"],
  "exclude": ["node_modules"]
}
